<configuration>
    <shutdownHook class="ch.qos.logback.core.hook.DelayingShutdownHook"/>
    <appender name="LogzioLogbackAppender" class="io.logz.logback.LogzioLogbackAppender">
        <token>@@{uat.logzio_token}</token>
        <logzioType>java</logzioType>
        <addHostname>true</addHostname>
        <additionalFields>service=composer;environment=${ENV}</additionalFields>
    </appender>
    <appender name="GELF UDP APPENDER" class="me.moocar.logbackgelf.GelfUDPAppender">
        <remoteHost>@@{uat.graylog_host}</remoteHost>
        <port>12201</port>
        <encoder class="me.moocar.logbackgelf.GZIPEncoder">
            <layout class="me.moocar.logbackgelf.GelfLayout">
                <staticAdditionalField>service:comms-composer</staticAdditionalField>
                <host>${HOSTNAME}</host>
                <useThreadName>true</useThreadName>
                <includeFullMDC>true</includeFullMDC>
            </layout>
        </encoder>
    </appender>
    <logger name="akka" level="INFO"/>
    <logger name="org.http4s.blaze.channel.ServerChannelGroup" level="WARN"/>
    <logger name="org.apache.kafka.clients.consumer.ConsumerConfig" level="INFO" />
    <logger name="org.apache" level="WARN"/>
    <logger name="org.apache.kafka" level="DEBUG" />

    <root level="INFO">
        <appender-ref ref="LogzioLogbackAppender"/>
    </root>
</configuration>
